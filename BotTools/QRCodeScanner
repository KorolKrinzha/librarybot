import telebot
from pyzbar.pyzbar import decode
from PIL import Image

bot = telebot.TeleBot('5418800223:AAF-i_2gypNH7BaQAQtk0GahsITMbjcImlU')

@bot.message_handler(commands=['start'])
def start (message):
    bot.send_sticker(message.chat.id, 'CAACAgIAAxkBAAEFhdZi890kA1dLPLMLHfE7QJF2IZccPAAChQADwZxgDIuMHR9IU10iKQQ')
    bot.send_message(message.chat.id, 'Отправь мне qr-код, а его рассшифрую')


@bot.message_handler(content_types=['photo'])
def photo(message):
     fileID = message.photo[-1].file_id
     file_info = bot.get_file(fileID)
     downloaded_file = bot.download_file(file_info.file_path)
     with open("image.jpg", 'wb') as new_file:
         new_file.write(downloaded_file)

     img = Image.open("image.jpg")
     all_info = decode(img)
     for i in all_info:
         bot.send_message(message.chat.id, i.data.decode("utf-8"))


bot.polling(none_stop=True)
